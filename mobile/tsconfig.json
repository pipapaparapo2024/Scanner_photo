{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": [
        "shared/*"
      ],
      "entities/*": [
        "entities/*"
      ],
      "features/*": [
        "features/*"
      ],
      "widgets/*": [
        "widgets/*"
      ],
      "pages/*": [
        "pages/*"
      ],
      "app/*": [
        "app/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "pages/**/*",
    "widgets/**/*",
    "features/**/*",
    "entities/**/*",
    "shared/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
