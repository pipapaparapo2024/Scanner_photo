# Backend environment variables
# Copy this file to .env and fill in the values. Do not commit .env.

# Server
PORT=4000
NODE_ENV=development

# CORS (comma-separated origins; leave empty in development to allow all)
ALLOWED_ORIGINS=

# Firebase Admin SDK (from service account JSON)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Email (SMTP) for verification codes
SMTP_EMAIL=
SMTP_PASSWORD=
SMTP_SERVICE=gmail
# Optional: SMTP_HOST=, SMTP_PORT=, SMTP_SECURE=false

# Email to receive feedback from the app (optional; if not set, feedback is only saved to Firestore)
ADMIN_EMAIL=

# RuStore IAP verification (optional in dev)
RUSTORE_VERIFY_URL=
RUSTORE_API_TOKEN=

# Initial free scan credits for new users
INITIAL_FREE_SCANS=5
